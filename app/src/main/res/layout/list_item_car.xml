<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_car"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/car_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/car_model"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/car_producer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/car_producer"
        android:textSize="18sp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@id/car_model"
        app:layout_constraintStart_toStartOf="@id/car_model"
        app:layout_constraintTop_toBottomOf="@id/car_model" />

    <TextView
        android:id="@+id/car_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/car_price"
        android:textAlignment="textEnd"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/car_model"
        app:layout_constraintStart_toStartOf="@id/car_model"
        app:layout_constraintTop_toBottomOf="@id/car_producer"
        app:suffixText=" â‚½" />


</androidx.constraintlayout.widget.ConstraintLayout>